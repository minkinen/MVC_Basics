

@{
    ViewData["Title"] = "FeverCheck";
}

<h1>Fever Check</h1>
<br />
<br />
<br />
@if(ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
 
<div>
    <form asp-controller="Doctor" asp-action="FeverCheck" method="post">
        <label>Temperature (°C) </label>
        <input type="number" name="temperature" step="0.1" value="37" min="10" max="50" />
        <input type="submit" value="Send info" />
    </form>
</div>
